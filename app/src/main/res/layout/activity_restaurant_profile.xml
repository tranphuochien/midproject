<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_header_image" />



        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebca0707"
            android:elevation="4dp"
            android:paddingBottom="24dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header_cover_image">

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Viral Android"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart_false"
                android:layout_marginTop="41dp"
                android:onClick="onClickFavorite"
                android:layout_below="@+id/user_profile_name"
                android:tag="false"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:orientation="horizontal">

                <TextView
                    android:autoLink="web"
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="52dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_share"
                    android:onClick="onClickShareBut"/>
                <ImageView
                    android:id="@+id/DirectionBut"
                    android:layout_width="52dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:src="@drawable/direction"
                    android:onClick="onClickDirectionBut"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:orientation="horizontal">

                <TextView
                    android:autoLink="phone"
                    android:id="@+id/tvNumberPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />

                <ImageView
                    android:id="@+id/CallBut"
                    android:layout_width="52dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:src="@drawable/phone_receiver"
                    android:onClick="onClickCallBut"/>

                <ImageView
                    android:id="@+id/SmsBut"
                    android:layout_width="52dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:src="@drawable/sms"
                    android:onClick="onClickSmsBut"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:autoLink="email"
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />

                <ImageView
                    android:id="@+id/EmailBut"
                    android:layout_width="52dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:src="@drawable/mail"
                    android:onClick="onClickEmailBut"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />
                <ImageView
                    android:id="@+id/btnMap"
                    android:layout_width="52dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:onClick="onClickMap"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:orientation="horizontal">

                <TextView
                    android:autoLink="web"
                    android:id="@+id/tvWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:orientation="horizontal">

                <TextView
                    android:autoLink="web"
                    android:id="@+id/tvReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
